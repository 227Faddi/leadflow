{
  "$schema": "https://json.schemastore.org/tsconfig",
  "_version": "23.0.0",

  "compilerOptions": {
    "lib": ["es2023"],
    "module": "node16",
    "target": "es2023",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node16",
    "outDir": "./dist",
    "rootDir": "./src",
    "sourceMap": true,
    "types": ["node"],
    "noImplicitAny": true,
    "noEmitOnError": false,
    "checkJs": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
